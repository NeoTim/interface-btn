
$cubic-ease-out = cubic-bezier(0,.74,0,.99)

/*==========================================|  THEME COLOR
*/
$theme-lables = default primary info success warning danger
$color-primary  = $blue.base
$color-info     = $purple.accent-2
$color-success  = $green.base
$color-warning  = $amber.base
$color-danger   = $red.base
$color-invert   = $grey.darken-3


/*==========================================|  SCREEN
*/
$small-screen-up = 601px
$medium-screen-up = 993px
$large-screen-up = 1201px
$small-screen = 600px
$medium-screen = 992px
$large-screen = 1200px

$screens = {
    sm: 600px
    md: 992px
    lg: 1200px
}


/*==========================================|  BTN
*/

$btn-size-xs              = 48px
$btn-size-sm              = 64px
$btn-size-md              = 80px
$btn-size-lg              = 180px
$btn-size-xl              = 240px
$btn-size                 = $btn-size-sm
$btn-is-uppsercase        = true
$btn-border-radius        = 2px
$btn-box-shadow           = 0px 4px 8px rgba(0,0,0,0.2)
$btn-line-height          = 48px
$btn-transition           = box-shadow 300ms ease
// background-colors
$btn-themes-bg = {
    default  : white,
    primary  : $color-primary,
    info     : $color-info,
    success  : $color-success,
    warning  : $color-warning,
    danger   : $color-danger,
    invert     : $color-invert,
}

// text-color
$btn-themes-color = {
    default  : $grey.darken-2,
    primary  : white,
    info     : white,
    success  : white,
    warning  : white,
    danger   : white,
    invert   : $grey.lighten-4,
}

// &:hover
$btn-hover-box-shadow     = 0px 8px 10px rgba(0,0,0,0.2)
// &:active
$btn-active-box-shadow    = 0px 1px 2px rgba(0,0,0,0.2)

